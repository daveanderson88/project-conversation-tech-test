<div id="activity-comments">
  <% activities.each do |activity| %>
    <div class="overflow-hidden bg-white shadow sm:rounded-l my-4">
      <div class="px-2 py-2 sm:px-6">
        <p class="font-bold"><%= activity[:message] %></p>
        <small>
          By <%= activity[:name] %>, <%= time_ago_in_words(activity[:time]) %> ago.
        </small>
      </div>
    </div>
  <% end %>
</div>

<p>Add a comment:</p>

<%= form_with model: [project, comment] do |f| %>
  <p><small><%= comment.errors.full_messages.join(" ") %></small></p>
  <%= f.text_field :content, class:"rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  <%= f.submit "Post", class:"rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
<% end %>
