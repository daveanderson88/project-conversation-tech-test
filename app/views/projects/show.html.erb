<h2 class="font-bold text-xl"><%= project.name %> <small id="current-status">(<%= project.status.titleize %>)</small></h2>

<p class="py-5">
  <%= project.description %>
</p>

<h5 class="font-semibold">Update status</h5>
<%= form_with model: [project] do |f| %>
  <%= f.select :status, options_for_select(Project.statuses.map {|key, value| [key.titleize, Project.statuses.key(value)]}, project.status),{}, { class:"rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
  <%= f.submit "Update", class:"rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
<% end %>

<%= render "shared/activity_feed" %>
