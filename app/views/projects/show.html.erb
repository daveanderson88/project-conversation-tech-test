<h2 class="font-bold text-xl"><%= project.name %> <small id="current-status">(<%= project.status.titleize %>)</small></h2>

<p>
  <%= project.description %>
</p>

<%= render "shared/activity_feed" %>

<%= form_with model: [project] do |f| %>
  <%= f.select :status, options_for_select(Project.statuses.map {|key, value| [key.titleize, Project.statuses.key(value)]}, project.status) %>
  <%= f.submit "Update", class:"rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
<% end %>


